@using ASP.Server.Controllers
@model CreateGenreModel
@{
    ViewData["Title"] = "Add a genre";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>



<form asp-controller="Genre" asp-action="CreateGenre">
    <div class="input-group">
        <label asp-for="Name"> </label>
        <input asp-for="Name" />

    </div>
    <input type="submit" value="Add Genre" style="width: 100%; margin-top: 50px" />
</form>